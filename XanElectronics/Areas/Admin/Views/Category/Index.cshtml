@model IEnumerable<Category>

@{
    ViewBag.Title = "title";
    Layout = "_adminLayout";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create</h4>
                        <a asp-action="Create" class="btn btn-success mt-3">Create new Category</a>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Category item in Model)
                                {
                                <tr>
                                    <td>
                                        <img src="~/assets/img/category/@item.ImageUrl" style="width:100px;height:100px" />
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
