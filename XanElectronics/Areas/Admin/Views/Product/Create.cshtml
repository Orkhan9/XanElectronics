@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "_adminLayout";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Product</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Images"></label>
                        <input asp-for="Images" class="form-control" accept="image/*">
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Ad</label>
                        <input asp-for="Name" class="form-control" placeholder="Ad">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Qiymet</label>
                        <input asp-for="Price" class="form-control" placeholder="Qiymet">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Endirim</label>
                        <input asp-for="DisCountRate" class="form-control" placeholder="Endirim">
                        <span asp-validation-for="DisCountRate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Star"></label>
                        <input asp-for="Star" class="form-control" placeholder="Star">
                        <span asp-validation-for="Star" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IsNew"></label>
                        <input asp-for="IsNew" class="form-control" placeholder="Yeni">
                        <span asp-validation-for="IsNew" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Secilmis</label>
                        <input asp-for="IsFeatured" class="form-control" placeholder="Secilmis">
                        <span asp-validation-for="IsFeatured" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="form-group">

                            <select name="CategoryId" asp-for="@Model.CategoryId"
                                    asp-items="@ViewBag.Categories">
                            </select>

                        </div>
                    </div>

                    <button type="submit" class="btn btn-success mr-2 create-book">Create</button>

                </form>
            </div>
        </div>
    </div>
</div>


