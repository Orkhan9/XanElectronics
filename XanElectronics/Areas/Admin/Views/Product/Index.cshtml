@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "_adminLayout";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create</h4>
                    <a asp-action="Create" class="btn btn-success mt-3">Create new Product</a>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Sekil
                                    </th>
                                    <th>
                                        Ad
                                    </th>
                                    <th>
                                        Yeni
                                    </th>
                                    <th>
                                        Secilmis
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Qiymet
                                    </th>
                                    <th>
                                        Endirim %
                                    </th>
                                    <th>
                                        YekunQiymet
                                    </th>
                                    <th>
                                        Ayarlar
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        <img src="~/assets/img/product/@item.ProductImages.ElementAt(0).ImageUrl" style="width:100px;height:100px" />
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.IsNew
                                    </td>
                                    <td>
                                        @item.IsFeatured
                                    </td>
                                    <td>
                                        @item.Category.Name
                                    </td>
                                    <td>
                                        @item.Price
                                    </td>
                                    <td>
                                        @item.DisCountRate
                                    </td>
                                    <td>
                                        @item.ResultPrice
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                            <i class="mdi mdi-information-variant"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="mdi mdi-settings"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

